<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fist"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
       <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/logo"
        android:layout_below="@+id/logo"
        android:layout_marginTop="24dp"
        android:gravity="center"
		android:background="@drawable/nice_button"
		android:textColor="@android:color/white"
  		android:textSize="18sp"
  		android:shadowRadius="1"
  		android:shadowDx="1"
  		android:shadowDy="1"
  		android:shadowColor="@android:color/black"
        android:text="@string/login" />

    <Button
        android:id="@+id/find_users_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_btn"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="24dp"
        android:gravity="center"
		android:background="@drawable/nice_button"
		android:textColor="@android:color/white"
  		android:textSize="18sp"
  		android:shadowRadius="1"
  		android:shadowDx="1"
  		android:shadowDy="1"
  		android:shadowColor="@android:color/black"
		android:text="@string/find_users" />
    

       
       <Button 
  		android:id="@+id/bump_user_btn"
  		android:layout_width="wrap_content"  
  		android:layout_height="wrap_content"
  		android:layout_alignLeft="@+id/find_users_btn"
  		android:layout_below="@+id/find_users_btn"
  		android:layout_marginTop="24dp"
  		android:gravity="center"
		android:background="@drawable/nice_button"
		android:text="@string/bump_device"
  		android:textColor="@android:color/white"
  		android:textSize="18sp"
  		android:shadowRadius="1"
  		android:shadowDx="1"
  		android:shadowDy="1"
  		android:shadowColor="@android:color/black"
		></Button>

</RelativeLayout>
